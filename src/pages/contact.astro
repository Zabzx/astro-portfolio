---
import Layout from "../layouts/Layout.astro";
import "@fontsource/dela-gothic-one";
import "@fontsource-variable/raleway";
---

<Layout>
  <section class="bg-mainBg bg-center bg-cover h-screen">
    <div class="container px-16">
      <h1 class="text-white text-3xl sm:text-6xl font-san pt-6">Contact Me</h1>

    <form action="https://formspree.io/f/xgejjdbn" method="POST">
        <div class="flex flex-col items-center mt-16">
        <input class="bg-fadedBlack border-4 border-white rounded-xl text-white p-5 sm:w-1/2 font-raleway focus:outline-none" placeholder="Your email address" type="email" name="email" />
        <br>
        <textarea class="bg-fadedBlack border-4 border-white rounded-xl text-white p-5 sm:w-1/2 h-56 font-raleway focus:outline-none" placeholder="Your message" name="message"></textarea>

        <div class="w-full sm:w-1/2">
            <button class="bg-fadedWhite p-3 rounded-md border-white border-4 text-white mt-5" type="submit">Send</button>
        </div>
        </div>
    </form>
    </div>
  </section>
</Layout>
